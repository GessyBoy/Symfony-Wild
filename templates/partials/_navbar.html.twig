<style>
    .sidebar {
        transition: transform 0.3s ease-in-out;
    }
    .sidebar-hidden {
        transform: translateX(-100%);
    }
    .sidebar-visible {
        transform: translateX(0);
    }
    .content-shifted {
        transform: translateX(260px); /* m√™me largeur que la sidebar + marge */
        transition: transform 0.3s ease-in-out;
    }
</style>

<div id="sidebar-container" class="relative z-50">
    {# Bouton toggle, centr√© verticalement #}
    <button onclick="toggleSidebar()"
            class="fixed top-1/2 left-2 transform -translate-y-1/2 z-50 bg-orange-600 text-white p-2 rounded-full shadow-lg hover:bg-orange-700 transition">
        <svg xmlns="http://www.w3.org/2000/svg" id="toggle-icon" class="h-6 w-6 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
    </button>

    {# Sidebar #}
    <aside id="sidebar"
           class="fixed top-0 left-0 h-full w-64 bg-gradient-to-b from-gray-800 via-gray-900 to-black text-white p-6 shadow-lg z-40 sidebar sidebar-hidden">
        <div class="flex flex-col items-center">
            <div class="w-20 h-20 mb-6 bg-white rounded-xl overflow-hidden shadow-lg">
                <img src="{{ asset('images/Toupa_sass.png') }}" alt="Logo" class="object-cover w-full h-full" />
            </div>

            <nav class="space-y-6 w-full text-center">
                <a href="{{ path('app_index') }}" class="block text-lg hover:text-orange-400 transition">üè† Accueil</a>
                <a href="{{ path('program_index') }}" class="block text-lg hover:text-orange-400 transition">üé¨ Program</a>
            </nav>
        </div>
    </aside>
</div>

<script>
    let isOpen = false;

    function toggleSidebar() {
        const sidebar = document.getElementById('sidebar');
        const icon = document.getElementById('toggle-icon');
        const mainContent = document.getElementById('main-content');

        isOpen = !isOpen;
        sidebar.classList.toggle('sidebar-visible', isOpen);
        sidebar.classList.toggle('sidebar-hidden', !isOpen);
        icon.classList.toggle('rotate-180', isOpen);
        mainContent.classList.toggle('content-shifted', isOpen);
    }
</script>
